{minimum_otp_vsn, "21.2"}.

{erl_opts, [debug_info, inline, verbose]}.

{deps, [
    {emsgpack, "~> 0.4"},
    otpbp
]}.

{xref_checks, [
    % deprecated_function_calls,
    % deprecated_functions,
    undefined_function_calls,
    undefined_functions,
    locals_not_used
]}.

{shell, [
    {config, "sys.config"},
    {apps, [erlogstash]}
]}.
